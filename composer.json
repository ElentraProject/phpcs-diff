{
    "name": "olivertappin/phpcs-diff",
    "description": "Detects violations of a defined coding standard based on a git diff.",
    "require": {
        "php": "^7.3 || ^8.0",
        "squizlabs/php_codesniffer": "*",
        "league/climate": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5.21"
    },
    "autoload": {
        "psr-4": {
            "PhpcsDiff\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpcsDiff\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/phpcs-diff"
    ],
    "scripts": {
        "test": "phpunit"
    }
}
